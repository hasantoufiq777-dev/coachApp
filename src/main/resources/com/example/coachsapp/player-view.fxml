<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coachsapp.controller.PlayerController"
      spacing="12" stylesheets="@styles.css" styleClass="app-root page-root" style="-fx-padding: 18;">

    <Label text="Player Details" styleClass="heading-lg"/>

    <TableView fx:id="playerTable" VBox.vgrow="ALWAYS" styleClass="table-modern">
        <columns>
            <TableColumn fx:id="playerNameColumn" text="Name" styleClass="col-name"/>
            <TableColumn fx:id="playerAgeColumn" text="Age"/>
            <TableColumn fx:id="playerJerseyColumn" text="Jersey"/>
            <TableColumn fx:id="playerPositionColumn" text="Position"/>
            <TableColumn fx:id="playerStatusColumn" text="Status"/>
            <TableColumn fx:id="playerClubColumn" text="Club"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Add Player" onAction="#addPlayer" styleClass="btn btn-primary primary-action"/>
        <Button text="Delete Player" onAction="#deletePlayer" styleClass="btn btn-danger"/>
        <Button text="View Profile" onAction="#viewProfile" styleClass="btn btn-accent" prefWidth="120"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back" onAction="#goBack" styleClass="btn btn-secondary secondary-action"/>
    </HBox>
</VBox>
