<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coachsapp.controller.PlayerController"
      spacing="12" style="-fx-padding: 18;" styleClass="main-container" stylesheets="@styles.css">

    <Label text="Player Details" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <!-- Filter Controls -->
    <HBox spacing="15" style="-fx-padding: 10; -fx-background-radius: 5;" styleClass="filter-panel">
        <Label text="Filter by Club:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="clubFilterCombo" prefWidth="200" promptText="All Clubs"/>
        <Label text="Filter by Position:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="positionFilterCombo" prefWidth="150" promptText="All Positions"/>
        <Button text="Clear Filters" onAction="#clearFilters" style="-fx-background-color: #ff9800; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="playerTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="playerNameColumn" text="Name" style="-fx-text-fill: black;"/>
            <TableColumn fx:id="playerAgeColumn" text="Age"/>
            <TableColumn fx:id="playerJerseyColumn" text="Jersey"/>
            <TableColumn fx:id="playerPositionColumn" text="Position"/>
            <TableColumn fx:id="playerStatusColumn" text="Status"/>
            <TableColumn fx:id="playerClubColumn" text="Club"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Add Player" onAction="#addPlayer" styleClass="button-primary"/>
        <Button text="Delete Player" onAction="#deletePlayer" styleClass="button-danger"/>
        <Button text="View Profile" onAction="#viewProfile" prefWidth="120" styleClass="button-info"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back" onAction="#goBack" styleClass="button-secondary"/>
    </HBox>
</VBox>
