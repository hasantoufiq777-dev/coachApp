<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coachsapp.controller.PlayerProfileController"
      spacing="20" style="-fx-padding: 25;" alignment="TOP_CENTER" styleClass="main-container" stylesheets="@styles.css">

    <Label text="Player Profile" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>


    <VBox spacing="15" style="-fx-padding: 25; -fx-max-width: 600px;" styleClass="card">
        

        <Label fx:id="playerNameLabel" text="Player Name" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: rgba(1,1,2,0.79);"/>
        
        <Separator/>
        
        <!-- Profile Details Grid -->
        <GridPane hgap="20" vgap="15">
            <!-- Column constraints -->
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints minWidth="200" hgrow="ALWAYS"/>
            </columnConstraints>
            
            <!-- Row 1: Jersey Number -->
            <Label text="Jersey Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="jerseyLabel" text="10" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-font-size: 14px;"/>
            
            <!-- Row 2: Age -->
            <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="ageLabel" text="25" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-font-size: 14px;"/>
            
          
            <Label text="Position:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="positionLabel" text="Forward" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-font-size: 14px;"/>
            
        
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Label fx:id="statusLabel" text="Available" 
                       style="-fx-font-size: 14px; -fx-padding: 4 12; -fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 12px;"/>
            </HBox>
            
           
            <Label text="Current Club:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="clubLabel" text="No Club" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   style="-fx-font-size: 14px;"/>
            
         
            <Label text="Player ID:" GridPane.columnIndex="0" GridPane.rowIndex="5"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="playerIdLabel" text="001" GridPane.columnIndex="1" GridPane.rowIndex="5"
                   style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
        </GridPane>
        
        <Separator/>
        
        <!-- Action Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="editPlayerBtn" text="Edit Player" onAction="#editPlayer" prefWidth="150" prefHeight="40"/>
            <Button text="Toggle Injury Status" onAction="#toggleInjuryStatus" prefWidth="180" prefHeight="40"/>
        </HBox>
    </VBox>

    <!-- Bottom Navigation -->
    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="Return to Dashboard" onAction="#goBack" prefWidth="180" prefHeight="40"/>
    </HBox>
</VBox>
