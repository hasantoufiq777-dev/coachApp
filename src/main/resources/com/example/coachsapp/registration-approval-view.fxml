<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coachsapp.controller.RegistrationApprovalController"
      spacing="20" alignment="TOP_CENTER" styleClass="main-container" stylesheets="@styles.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Button text="â† Back" onAction="#goBack" styleClass="button-secondary"/>
        <Label text="Registration Approvals" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
    </HBox>

    <Label fx:id="pendingCountLabel" text="Pending Requests: 0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Registration Requests" style="-fx-font-size: 24px;"/>
        
        <TableView fx:id="requestsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="usernameCol" text="Username" prefWidth="120"/>
                <TableColumn fx:id="roleCol" text="Role" prefWidth="120"/>
                <TableColumn fx:id="clubCol" text="Club" prefWidth="150"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="150"/>
                <TableColumn fx:id="dateCol" text="Request Date" prefWidth="140"/>
                <TableColumn fx:id="actionCol" text="Actions" prefWidth="180"/>
            </columns>
        </TableView>

        <Label text="Note: Click 'Approve' to assign a manager/player profile to the user." 
               style="-fx-font-size: 11px; -fx-text-fill: gray;"/>
    </VBox>
</VBox>
