<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.example.coachsapp.controller.ClubController"
    spacing="12" style="-fx-padding: 18;" styleClass="main-container" stylesheets="@styles.css">

    <Label text="Clubs" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <HBox spacing="12" VBox.vgrow="ALWAYS">
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <TableView fx:id="clubTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID"/>
                    <TableColumn fx:id="nameColumn" text="Club Name"/>
                    <TableColumn fx:id="playerCountColumn" text="Players"/>
                </columns>
            </TableView>

            <HBox spacing="8">
                <Button text="Add Club" onAction="#addClub" styleClass="button-primary"/>
                <Button text="Delete Club" onAction="#deleteClub" styleClass="button-danger"/>
            </HBox>
        </VBox>

        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="Managers" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <ListView fx:id="managerList" VBox.vgrow="SOMETIMES"/>

            <Label text="Players in Club" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TableView fx:id="playersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="playerNameColumn" text="Name"/>
                    <TableColumn fx:id="playerAgeColumn" text="Age"/>
                    <TableColumn fx:id="playerJerseyColumn" text="Jersey"/>
                    <TableColumn fx:id="playerPositionColumn" text="Position"/>
                    <TableColumn fx:id="playerStatusColumn" text="Status"/>
                </columns>
            </TableView>

            <HBox spacing="8">
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back" onAction="#goBack" styleClass="button-secondary"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>
