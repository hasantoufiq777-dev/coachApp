<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coachsapp.controller.RegistrationController"
      spacing="20" alignment="CENTER">
    
    <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
    </padding>

    <Label text=" Coaches App" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
    <Label text="Create Your Account" style="-fx-font-size: 24px;"/>

    <VBox spacing="15" alignment="CENTER" maxWidth="450">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <VBox spacing="8">
            <Label text="Username:"/>
            <TextField fx:id="usernameField" promptText="Choose a username" prefWidth="350"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" promptText="Choose a password" prefWidth="350"/>
            <Label fx:id="passwordStrengthLabel" style="-fx-font-size: 11px;"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Confirm Password:"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" prefWidth="350"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Age:"/>
            <TextField fx:id="ageField" promptText="Enter your age" prefWidth="350"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Register as:"/>
            <ComboBox fx:id="roleCombo" promptText="Select your role" prefWidth="350"/>
        </VBox>

        <VBox fx:id="positionBox" spacing="8" managed="false" visible="false">
            <Label text="Position:"/>
            <ComboBox fx:id="positionCombo" promptText="Select your position" prefWidth="350"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Club:"/>
            <ComboBox fx:id="clubCombo" promptText="Select your club" prefWidth="350"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="red" wrapText="true"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Register" onAction="#handleRegister" prefWidth="160" prefHeight="40"/>
            <Button text="Back to Login" onAction="#goBackToLogin" prefWidth="160" prefHeight="40"/>
        </HBox>

        <VBox spacing="5" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
            <Label text="Note: Your registration will be sent to admin for approval." style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
            <Label text="You can login once the admin approves your request." style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
        </VBox>
    </VBox>
</VBox>
