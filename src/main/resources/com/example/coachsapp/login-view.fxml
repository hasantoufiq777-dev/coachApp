<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coachsapp.controller.LoginController"
      spacing="20" alignment="CENTER" styleClass="main-container" stylesheets="@styles.css">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Coaches App" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
    <Label text="Login to Continue" style="-fx-font-size: 24px;"/>

    <VBox spacing="15" alignment="CENTER" maxWidth="400" styleClass="login-panel">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <VBox spacing="8">
            <Label text="Username:"/>
            <TextField fx:id="usernameField" promptText="Enter username" prefWidth="300"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" promptText="Enter password" prefWidth="300"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="red"/>

        <Button text="Login" onAction="#handleLogin" prefWidth="300" prefHeight="45" styleClass="button-primary"/>

        <Separator prefWidth="300"/>

        <VBox spacing="8" alignment="CENTER">
            <Label text="Don't have an account?" style="-fx-font-size: 12px;"/>
            <Button text="Register as Manager/Player" onAction="#handleRegister" prefWidth="300" prefHeight="40" styleClass="button-info"/>
        </VBox>
    </VBox>
</VBox>
