<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coachsapp.controller.ManagerProfileController"
      spacing="20" style="-fx-padding: 25;" alignment="TOP_CENTER" styleClass="main-container" stylesheets="@styles.css">

    <Label text="Manager Profile" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <!-- Profile Card -->
    <VBox spacing="15" style="-fx-padding: 25; -fx-max-width: 600px;" styleClass="card">
        
        <!-- Manager Name (Header) -->
        <Label fx:id="managerNameLabel" text="Manager Name" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #010102;"/>
        
        <Separator/>
        
        <!-- Profile Details Grid -->
        <GridPane hgap="20" vgap="15">
            <!-- Column constraints -->
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints minWidth="200" hgrow="ALWAYS"/>
            </columnConstraints>
            
            <!-- Row 1: Manager ID -->
            <Label text="Manager ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="managerIdLabel" text="001" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            
            <!-- Row 2: Age -->
            <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="managerAgeLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            
            <!-- Row 3: Current Club -->
            <Label text="Current Club:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="clubNameLabel" text="Club Name" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-font-size: 14px;"/>
            
            <!-- Row 4: Club ID -->
            <Label text="Club ID:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="clubIdLabel" text="001" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
        </GridPane>
        
        <Separator/>
        
        <!-- Club Players Section -->
        <VBox spacing="10">
            <Label text="Club Squad" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TableView fx:id="squadTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="squadNameColumn" text="Player Name" prefWidth="150"/>
                    <TableColumn fx:id="squadJerseyColumn" text="Jersey" prefWidth="80"/>
                    <TableColumn fx:id="squadPositionColumn" text="Position" prefWidth="120"/>
                    <TableColumn fx:id="squadStatusColumn" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
        
        <Separator/>
        
        <!-- Action Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Edit Manager" onAction="#editManager" prefWidth="150" prefHeight="40"/>
            <Button text="Change Club" onAction="#changeClub" prefWidth="150" prefHeight="40"/>
        </HBox>
    </VBox>

    <!-- Bottom Navigation -->
    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="Back to Managers" onAction="#goBack" prefWidth="150" prefHeight="40"/>
    </HBox>
</VBox>
